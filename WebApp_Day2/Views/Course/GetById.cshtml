<!-- Strong type view -->
@model Course
@{
    ViewData["Title"] = "GetById";
}

<h1>GetById</h1>

<div class="card" >
    <img src="https://www.ncertbooks.guru/wp-content/uploads/2022/05/Course-details.png" class="card-img-top" alt="course details">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Total Hours : @Model.TotalHours</li>
        <li class="list-group-item">Full Mark : @Model.FullMark</li>
    </ul>
    <div class="card-body">
        <a href="/course/index" class="card-link">Back to courses</a>
        <a href="#" class="card-link">Get instructor Details</a>
    </div>
</div>